<%= form_for Produto.new do |f| %>

<div class= "form-group">
<%= f.label :nome %> 
<%= f.text_field :nome, class: "form-control" %><br/>
</div>

<div class= "form-group">
<%= f.label :descrição %>
<%= f.text_area :descricao, class: "form-control" %>
</div>

<div class= "form-group">
<%= f.label :quantidade %>
 <%= f.number_field :quantidade, class: "form-control" %>
</div>


<div class= "form-group">
<%= f.label :preco %>
<%= f.number_field :preco, class: "form-control" %>
</div>

<%= f.submit "Criar o produto", class: "btn btn-primary" %>
<% end %>
