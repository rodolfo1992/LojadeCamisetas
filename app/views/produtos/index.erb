	<table class="table table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nome</th>
				<th>Descrição</th>
				<th>Preço</th>
				<th>Quantidade</th>
			</tr>
		</thead>
		<tbody>
			<% @produtos_por_id.each do |produto| %>
			<tr>
			<td><%= produto.id %></td>
			<td><%= produto.nome %></td>
			<td><%= produto.descricao %></td>
			<td><%= produto.preco %></td>
			<td><%= produto.quantidade %></td>
			<!--<td><a href="/produtos/<%= produto.id %>/remove" class= "btn btn-danger" >Remover</td>-->
			<td><%= link_to "Remover", produto, method: :delete, class: "btn btn-danger" %>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
